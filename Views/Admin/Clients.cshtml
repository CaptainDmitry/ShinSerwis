@model IEnumerable<ShinSerwis.Models.User>

@{
    ViewData["Title"] = "Список клиентов";
}

<div class="container mt-4">
    <h1 class="mb-4">Список клиентов</h1>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">Нет клиентов</h4>
            <p>В системе еще не зарегистрировано ни одного клиента.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Имя пользователя</th>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Email</th>
                        <th>Телефон</th>
                        <th>Автомобили</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.Username</td>
                            <td>@client.FirstName</td>
                            <td>@client.LastName</td>
                            <td>@client.Email</td>
                            <td>@client.PhoneNumber</td>
                            <td>
                                @if (client.Cars != null && client.Cars.Any())
                                {
                                    <span class="badge bg-primary">@client.Cars.Count</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">0</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ClientDetails" asp-route-id="@client.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Подробнее
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Вернуться в панель управления
        </a>
    </div>
</div> 