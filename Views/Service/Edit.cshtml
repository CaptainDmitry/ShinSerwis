@model ShinSerwis.Models.Service

@{
    ViewData["Title"] = "Редактирование услуги";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h2 class="card-title">Редактирование услуги</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="IsActive" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Название услуги</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">Цена (руб.)</label>
                                <input asp-for="Price" class="form-control" type="number" min="0" step="0.01" required />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="DurationMinutes" class="form-label">Длительность (мин.)</label>
                                <input asp-for="DurationMinutes" class="form-control" type="number" min="1" required />
                                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Назад к списку
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Сохранить изменения
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 